<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_reminderDay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/image_revoke"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/revoke"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:layout_above="@id/layout_input"
        android:visibility="gone"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp"
        android:paddingBottom="25dp"
        android:background="@drawable/shape_bg_input">

        <ImageView
            android:id="@+id/image_calendar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:src="@drawable/calendar"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <EditText
            android:id="@+id/edit_remindInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="自然输入，创建提醒……"/>

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="6dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/delete_dark"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_send"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/upload_gray"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="15dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>